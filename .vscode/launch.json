{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM (develop mode)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "local:debug:prod"],
      "port": 9229,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/lib/**/*.js",
        "<node_internals>/**/*.js",
        "**/async_hooks.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM (production mode)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug:prod"],
      "port": 9229
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000/new/cardiff",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node run",
      "program": "${workspaceRoot}/src/server/index.js",
      "runtimeArgs": ["--inspect"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug unit tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": ["--runInBand", "./src", "./pages"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}
