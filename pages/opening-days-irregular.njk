{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../components/PostForm.njk" import postForm %}
{% from "../components/ProcessedErrorSummary.njk" import processedErrorSummary %}
{% extends "layout.njk" %}
{% block content %}
  {{ props.currentPageWithQuery }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% call postForm(props.formAction, props.csrfToken, props.language) -%}
      {{ processedErrorSummary(props.validatorErrors, props.language) }}
      {% call govukFieldset({
      describedBy: "opening_days_irregular",
        legend: {
          text: __("Opening periods"),
          classes: "govuk-fieldset__legend--l",
          isPageHeading: true
        }
        }) %}
      {% set html %}
      <p class="govuk-body">{{ __("When will this establishment be open and serving or preparing food?") }}</p>
      <div class="govuk-label">
        <label class="govuk-hint">
          {{ __("For example") }}
        </label>
        <ul style="margin-block-start: 0; margin-block-end: 1em">
          <li>{{ __("only serving food during December at Christmas markets") }}</li>
          <li>{{ __("open at weekends in June and August between 10:00 and 19:00") }}</li>
        </ul>
      </div>
      {% endset %}
      {{ govukTextarea({
        "label": { "html": html },
        "id": "opening_days_irregular",
        "value": props.cumulativeFullAnswers.opening_days_irregular,
        "name": "opening_days_irregular",
        "errorMessage": {
        "text": __(props.validatorErrors.opening_days_irregular)} if props.validatorErrors.opening_days_irregular
        }) }}
      {% endcall %}
      {{ govukButton({
              text: __("Save and continue") if props.editModeFirstPage else __("Continue")
            }) }}
      {%- endcall %}
    </div>
  </div>
{% endblock %}