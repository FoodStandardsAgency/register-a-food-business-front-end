{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/PostForm.njk" import postForm %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% extends "layout.njk" %}

{% block content %}

{{ props.currentPageWithQuery }}
  
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

      {% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}

        {% call govukFieldset({
          legend: {
            text: "What is an establishment?",
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
                  }
            }) %}
        {% endcall%}

         {{ govukDetails({
                summaryText: "What is an establishment?",
                text: "An establishment is the location of your food business. If it is a mobile food business, please use the location where it is normally stored overnight."
                }) }}

        {% if props.editModeFirstPage %}
            {% set editModeFirstPage = "/new/" + props.council + "/establishment-address?edit=establishment-address" %}
        {% else %}
            {% set editModeFirstPage = "/new/" + props.council + "/establishment-address" %}
        {% endif %}

         {{ govukSummaryList({
        classes: 'govuk-summary-list--no-border',
        rows: [
          {
            key: {
              text: "Postcode you have entered"
            },
            value: {
              text: props.cumulativeFullAnswers.establishment_postcode_find
            },
            actions: {
              items: [
                {
                  href: editModeFirstPage,
                  text: "Change postcode"
                }
              ]
            }
          }
        ]
      }) }}

      <h2 class= "govuk-heading-2">Select an address for  {{props.cumulativeFullAnswers.establishment_postcode_find}}</h2>

      {% if props.addressLookups.establishment_postcode_find %}
            
      {% else %}
            
      {% endif %}

      {{ govukSelect({
        id: "operatorAddressDropdown",
        name: "operator_address_selected",
        label: {
          text: ""
        },
        items: [
          {
            value: props.addressLookups.operator_postcode_find,
            text: ""

          }
        ]
      }) }}
      {% endcall%}
   </div>
</div>
{% endblock %}