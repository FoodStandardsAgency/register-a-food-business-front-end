{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% from "../components/EstablishmentDetails.njk" import establishmentHiddenDetails %}
{% from "../components/PostForm.njk" import postForm %}
{% from "../components/ProcessedErrorSummary.njk" import processedErrorSummary %}

{% extends "layout.njk" %}

{% block content %}
  
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

      {% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}
       {{ processedErrorSummary(props.validatorErrors, props.language) }}

        {% call govukFieldset({
          legend: {
            text: __("Which is the establishment's address from the list?"),
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
                  }
            }) %}
        {% endcall%}

        {{ establishmentHiddenDetails() }}

        {% if props.editModeFirstPage %}
            {% set editModeFirstPage = "/new/" + props.council + "/establishment-address?edit=establishment-address" %}
        {% else %}
            {% set editModeFirstPage = "/new/" + props.council + "/establishment-address" %}
        {% endif %}

         {{ govukSummaryList({
        classes: 'govuk-summary-list--no-border',
        rows: [
          {
            key: {
              text: __("Postcode you have entered")
            },
            value: {
              text: props.cumulativeFullAnswers.establishment_postcode_find
            },
            actions: {
              items: [
                {
                  href: editModeFirstPage,
                  text: __("Change postcode")
                }
              ]
            }
          }
        ]
      }) }}


      {{ govukSelect({
        id: "establishmentAddressDropdown",
        name: "establishment_address_selected",
        label: {
          text: __("Select an address for ") + props.cumulativeFullAnswers.establishment_postcode_find
        },
        items: props.addressLookups.establishment_postcode_find | addressSelectItems
      }) }}

      {% if props.editModeFirstPage %}
          {% set editModeFirstPage = "/new/" + props.council + "/establishment-address-manual?edit=establishment-address-manual" %}
      {% else %}
          {% set editModeFirstPage = "/new/" + props.council + "/establishment-address-manual" %}
      {% endif %}
      
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <a href = {{editModeFirstPage}} class="govuk-link" id="cantFindAddressLink">{{__("I can't find my address in the list") }} </a>
        </div>
      </div>
      <br>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          {{ govukButton({
              text: __("Continue")
          }) }}
        </div>
      </div>
      {% endcall%}
   </div>
</div>
{% endblock %}