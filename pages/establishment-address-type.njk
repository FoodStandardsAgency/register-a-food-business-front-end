{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/PostForm.njk" import postForm %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "layout.njk" %}

{% block content %}

{{ props.currentPageWithQuery }}

{% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}
  
  <h1 id="main-heading" class="govuk-heading-l">{{ __("Where is this establishment located?")}}</h1>

  {{ govukDetails({
  summaryText: __("What is an establishment?"),
  href: "#",
  text: __( "An establishment is the location of your food business. If it is a mobile food business, please use the location where it is normally stored overnight.")
  }) }}

  {{ govukRadios({
  idPrefix: "establishment_type",
  name: "establishment_type",
  items: [
    {
      value: "MOBILE",
      text: "In a mobile or moveable premises",
      id: "establishment_type_mobile_moveable",
      checked: props.cumulativeFullAnswers.establishment_type === "MOBILE"
    },
    {
      value: "DOMESTIC",
      text: "In a home or domestic premises",
      id: "establishment_type_home_domestic",
      checked: props.cumulativeFullAnswers.establishment_type === "DOMESTIC"
    },
    {
      value: "COMMERCIAL",
      text: "In a commercial or public premises",
      id: "establishment_type_business_commercial",
      checked: props.cumulativeFullAnswers.establishment_type ==="COMMERCIAL"
    }
  ]
}) }}
  
  {{ govukButton({
    text: "Continue"
  }) }}
{%- endcall %}

{% endblock %}