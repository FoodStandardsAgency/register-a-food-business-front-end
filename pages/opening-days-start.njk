{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "../components/PostForm.njk" import postForm %}

{% extends "layout.njk" %}

{% block content %}

{{ props.currentPageWithQuery }}

{% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}
  

{{ govukRadios({
  idPrefix: "opening_days_start",
  name: "opening_days_start",
  fieldset: {
    legend: {
      text: "What days will this establishment be open and producing or serving food?",
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  items: [
    {
      value: "Every day",
      text: "Every day",
      id: "opening_days_start_everyday",
      checked: props.cumulativeFullAnswers.opening_days_start === "Every day"
    },
    {
      value: "Some days",
      text: "Some days a week",
      id: "opening_days_start_some_days",
      checked: props.cumulativeFullAnswers.opening_days_start === "Some days"
    },
    {
      value: "Irregular days",
      text: "Irregular days or seasonal",
      id: "opening_days_start_irregular_days",
      checked: props.cumulativeFullAnswers.opening_days_start === "Irregular days"
    }
  ]
}) }}

{{ govukDetails({
  summaryText: __("I don't know what days to select"),
  href: "#",
  text: __("The food business will have irregular opening days if it isn't open the same days every week. This could include seasonal establishments such as summer ice-cream vendors. It can also include establishments which only open for events such as football matches.")
}) }}

{{ govukButton({
      text: "Continue"
    }) }}

  {%- endcall %}

{% endblock %}