{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "../components/PostForm.njk" import postForm %}
{% from "../components/ProcessedErrorSummary.njk" import processedErrorSummary %}

{% extends "layout.njk" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

    {% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}

        {{ processedErrorSummary(props.validatorErrors, props.language) }}

        {{ govukTextarea({
            name: "business_other_details",
            id: "business_other_details",
            value: props.cumulativeFullAnswers.business_other_details,
            label: {
                text: __("Other details"),
                classes: "govuk-label--l",
                isPageHeading: true
            },
            hint: {
                text: __("Is there anything else you need to tell us about this establishment? (optional)")
            }
        }) }}

        {{ govukButton({
            text: __("Continue")
        }) }}
    {% endcall %}

    </div>
  </div>
{% endblock %}