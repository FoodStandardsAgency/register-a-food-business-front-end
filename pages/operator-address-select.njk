{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/PostForm.njk" import postForm %}
{% from "../components/AddressHelp.njk" import addressHelpForm %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/select/macro.njk" import govukSelect %}



{% extends "layout.njk" %}

{% block content %}

  {{ props.currentPageWithQuery }}

  {% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}

  {% if props.cumulativeFullAnswers.registration_role === "PARTNERSHIP" %}
    {% call govukFieldset({
    legend: {
      text: "Which is the partnership contact's address from the list?",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
            }
    }) %}
    {% endcall%}
  {% else %}
    {% call govukFieldset({
      legend: {
        text: "Which is the operator's address from the list?",
        classes: "govuk-fieldset__legend--l",
        isPageHeading: true
              }
        }) %}
    {% endcall%}

  {% endif %}

  {% call addressHelpForm(props.cumulativeFullAnswers.registration_role) %}

  {% endcall%}


{% if props.editModeFirstPage %}
{% set editModeFirstPage = "/new/" + props.council + "/operator-address?edit=operator-address" %}
{% else %}
{% set editModeFirstPage = "/new/" + props.council + "/operator-address" %}
{% endif %}

{{ govukSummaryList({
  classes: 'govuk-summary-list--no-border',
  rows: [
    {
      key: {
        text: "Postcode you have entered"
      },
      value: {
        text: props.cumulativeFullAnswers.operator_postcode_find
      },
      actions: {
        items: [
          {
            href: editModeFirstPage,
            text: "Change postcode"
          }
        ]
      }
    }
  ]
}) }}

<h2 class= "govuk-heading-2">Select an address for  {{props.cumulativeFullAnswers.operator_postcode_find}}</h2>

{{ govukSelect({
  id: "operatorAddressDropdown",
  name: "operator_address_selected",
  label: {
    text: ""
  },
  items: [
    {
      value: props.addressLookups.operator_postcode_find,
      text: ""

    }
  ]
}) }}

  {{ govukButton({
      text: "Continue"
    }) }}

  {% endcall %}

{% endblock %}