{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/PostForm.njk" import postForm %}
{% from "../components/AddressHelp.njk" import addressHelpForm %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% extends "layout.njk" %}

{% block content %}

  {{ props.currentPageWithQuery }}

  {% call postForm("/continue" + props.currentPage, props.csrfToken, props.language) -%}

  {% if props.cumulativeFullAnswers.registration_role === "PARTNERSHIP" %}
    {% call govukFieldset({
    legend: {
      text: "Which is the partnership contact's address from the list?",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
            }
    }) %}
    {% endcall%}
  {% else %}
    {% call govukFieldset({
      legend: {
        text: "Which is the operator's address from the list?",
        classes: "govuk-fieldset__legend--l",
        isPageHeading: true
              }
        }) %}
    {% endcall%}

  {% endif %}

  {% call addressHelpForm(props.cumulativeFullAnswers.registration_role) %}

  {% endcall%}

  {% call govukFieldset({
    legend: {
      text: "Postcode you have entered",
      classes: "govuk-fieldset__legend--l"
    }
  }) %}

  {{ govukButton({
      text: "Continue"
    }) }}

  {% endcall %}

  {% endcall %}

{% endblock %}