{% from "govuk/components/skip-link/macro.njk" import govukSkipLink %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "../components/FsaHeader.njk" import fsaHeader %}
{% from "../components/FsaFooter.njk" import fsaFooter %}
{% from "../components/BackAndLanguageBar.njk" import backAndLanguageBar %}
{% extends "../components/Template.njk" %}
<html>
  <head>
    <title>
      {% block title %}{% endblock %}
    </title>
    {% block head %}
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-YCZ4TF8DJM"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }
        gtag('js', new Date());

        gtag('config', 'G-YCZ4TF8DJM');
      </script>
      <meta charset="utf8"/>
      <meta name="viewport" content="width=device-width"/>
      <meta name="google" content="notranslate">
      <link href="/css/app.css" rel="stylesheet" type="text/css">
    {% endblock %}
  </head>
  <body>
    <script>
      document.body.className = (
        (document.body.className)
        ? document.body.className + ' js-enabled'
        : 'js-enabled');
    </script>
    {% block header %}
      {{ fsaHeader(props) }}
    {% endblock %}
    {% block beforeContent %}
      {{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        html: __('This is a new service', props.language) + ' â€“ ' + '<a class="govuk-link"  target="_blank" rel="noopener noreferrer" aria-label="' + 
          __('your feedback (opens in new window)', props.language) + 
          '" href="'+__('feedback-form', props.language)+'">' +
          __('your feedback', props.language) + '</a> ' + __('will help us improve it', props.language) + '.'
      }) }}
      {{ backAndLanguageBar(props) }}
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
      {{ fsaFooter({
          meta: {
            items: [
              {
                href: __("cookies-link", props.language),
                text: __("Cookies", props.language),    
                attributes: { target:"_blank", rel:"noopener noreferrer" }        
              },
              {
                href: __("privacy-link", props.language),
                text: __("Privacy", props.language),
                attributes: { target:"_blank", rel:"noopener noreferrer" }   
              },
              {
                href: __("feedback-form", props.language),
                text: __("Feedback", props.language),
                attributes: { target:"_blank", rel:"noopener noreferrer" }   
              },
              {
                href: __("accessibility-link", props.language),
                text: __("Accessibility", props.language),
                attributes: { target:"_blank", rel:"noopener noreferrer" }   
              },
              {
                href: __('change-language', props.language),
                text: __('Change Language', props.language)
              }
              
            ]
          }
      }) }}
    {% endblock %}
    <script src="scripts/govuk.js" type="text/javascript"></script>
    <script>
      window
        .GOVUKFrontend
        .initAll()
    </script>
  </body>
</html>