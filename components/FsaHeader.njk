{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

{% macro fsaHeader(props) %}
    {% if props.acceptAllCookies !== "true" and props.acceptAllCookies !== "false" %}
        {% set html %}
        <p class="govuk-body">Register a food business uses a cookie to create the registration. We also 
        use optional cookies to analyse how the service is performing.</p>
        <p class="govuk-body">We do not share any information with advertisers or social media platforms. 
        We do not store any information about you in the cookie.</p>
        {% endset %}

        {{ govukCookieBanner({
        ariaLabel: "Cookies on RaFB",
        messages: [
            {
            headingText: "Cookies on RaFB",
            html: html,
            actions: [
                {
                    text: "I accept cookies",
                    type: "button",
                    name: "cookies",
                    value: "accept",
                    href: "/setcookie/acceptAllCookies/true"
                },
                {
                    text: "Reject optional cookies",
                    type: "submit",
                    name: "cookies",
                    value: "reject",
                    href: "/setcookie/acceptAllCookies/false"
                },
                {
                    text: "Find out more about cookies",
                    href: "https://www.gov.uk/help/cookies"
                },
                {
                    text: "Read our cookie policy",
                    href: "https://www.food.gov.uk/cookie-policy"
                }
            ]
            }
        ]
        }) }}
    {% endif %}
    {{ govukHeader ({
        serviceName: __("Register a Food Business")
    }) }}
{% endmacro %}