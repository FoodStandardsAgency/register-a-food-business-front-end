{% from "../components/CustomFsaHeader.njk" import govukCustomHeader %}
{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}
{% macro fsaHeader(props) %}
  {% if props.acceptAllCookies !== "true" and props.acceptAllCookies !== "false" %}
    {% set html %}
    <p class="govuk-body">{{ __('Register a food business uses a cookie to create the registration. We also use optional cookies to analyse how the service is performing.', props.language) }}</p>
    <p class="govuk-body">{{ __('We do not share any information with advertisers or social media platforms. We do not store any information about you in the cookie.', props.language) }}</p>
    {% endset %}
    {{ govukCookieBanner({
        id: "cookieBanner",
        ariaLabel: __("Cookies on RAFB", props.language),
        messages: [
            {
            headingText: __("Cookies on RAFB", props.language),
            html: html,
            actions: [
                {
                    text: __("I accept cookies", props.language),
                    type: "button",
                    name: "cookies",
                    value: "accept",
                    href: "/setcookie/acceptAllCookies/true"
                },
                {
                    text: __("Reject optional cookies", props.language),
                    type: "submit",
                    name: "cookies",
                    value: "reject",
                    href: "/setcookie/acceptAllCookies/false"
                },
                {
                    text: __("Find out more about cookies", props.language),
                    href: "https://www.gov.uk/help/cookies",
                    attributes: { target:"_blank", rel:"noopener noreferrer" }
                },
                {
                    text: __("Read our cookie policy", props.language),
                    href: "https://www.food.gov.uk/cookie-policy",
                    attributes: { target:"_blank", rel:"noopener noreferrer" }
                }
            ]
            }
        ]
        }) }}
  {% endif %}
  {{ govukCustomHeader ({
        serviceName: __("Register a Food Business", props.language)
    }) }}
{% endmacro %}