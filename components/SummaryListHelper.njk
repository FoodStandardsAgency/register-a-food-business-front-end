{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% macro summaryListHelperWithoutEdit(keyText, valueText, href, property, id) %}
    {{ govukSummaryList({
        rows: 
        [
        {
        key: { 
        text:  keyText
        },
        value: {
        text: valueText
        }          
        }
        ]
    }) }}
{% endmacro %}

{% macro summaryListHelper(keyText, valueText, href, property, id) %}

  {% if property %}
    {% set hrefText = __("Change") %}
  {% else %}
    {% set hrefText = __("Enter answer") %}
  {% endif %}

  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        {{ keyText }}
      </dt>
      <dd class="govuk-summary-list__value" id={{id}}>
        {{ valueText }}
      </dd>
      <dd class="govuk-summary-list__actions">
        <a class="govuk-link" href={{href}}>
          {{ hrefText }}
        </a>
      </dd>
    </div>
  </dl>

{% endmacro %}

{% macro summaryListHelperHtmlWithoutEdit(keyText, valueHtml, href, property) %}
  {{ govukSummaryList({
      rows: 
      [
      {
      key: { 
      text:  keyText
      },
      value: {
      html: valueHtml
      }            
      }
      ]
  }) }}
{% endmacro %}

{% macro summaryListHelperHtml(keyText, valueHtml, href, property) %}

  {% if property %}
    {% set hrefText = __("Change") %}
  {% else %}
    {% set hrefText = __("Enter answer") %}
  {% endif %}

  {{ govukSummaryList({
        rows: 
        [
        {
        key: { 
        text:  keyText
        },
        value: {
        html: valueHtml
        },
        actions: 
        {
        items: 
            [
            {
            href: href,
            text: hrefText
            }
            ]
        }               
        }
        ]
    }) }}
{% endmacro %}

