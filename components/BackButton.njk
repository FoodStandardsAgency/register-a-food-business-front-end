{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% macro backButton(props) %}
    {% if props.hideback %}

    {% elif props.backToStart %}
        {{ govukBackLink({
            href: props.href if props.href else "/",
            text: __("Back to start")
        }) }}
    {% elif prodp.editModeFirstPage %}
        {{ govukBackLink({
            href: props.href,
            text: __("Back")
        }) }}
    {% else %}
        {{ govukBackLink({
            href: props.backHref if props.href else ("/back" + props.currentPage),
            text: __({ phrase: "Back", locale: props.language })
        }) }}
    {% endif %}

{% endmacro %}