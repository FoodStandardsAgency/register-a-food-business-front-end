{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% macro ProcessedErrorSummary(validatorErrors, onHandleClick) %}

const errors = [];
{%  for (error in validatorErrors) {
    errors.push({
      targetName: error,
      text: validatorErrors[error]
    });
  }
  %}
  
{% if (errors.length > 0) { %}

    {{ govukErrorSummary({
    titleText: "There is a problem",
    errorList: [
        {
        text: "The date your passport was issued must be in the past",
        href: "#passport-issued-error"
        },
        {
        text: "Enter a postcode, like AA1 1AA",
        href: "#postcode-error"
        }
    ],
    onHandleClick
    }) }}

{% endif %}

{% endmacro %}